@model Costin_Adrian_Shop.Pages.Carts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Product.Name)
        </dd>
        <dd class="col-sm-10 offset-sm-2">
            <img style="width: 100px" src="/img/@Html.DisplayFor(model => model.Cart.Product.ImageURL)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Qty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Qty)
