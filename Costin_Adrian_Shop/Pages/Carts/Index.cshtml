@page "/cart"
@model Costin_Adrian_Shop.Pages.Carts.IndexModel

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].Product.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].Qty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cart) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                <img style="width:100px" src="/img/@Html.DisplayFor(modelItem => item.Product.ImageURL)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td style="text-align: right">
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
