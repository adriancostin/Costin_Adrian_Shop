@page
@model Costin_Adrian_Shop.Pages.Carts.EditModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cart.ID" />
            <div class="form-group">
                <label asp-for="Cart.Product.Name" class="control-label"></label>
                <div>
                    <strong>@Html.DisplayFor(model => model.Cart.Product.Name)</strong>
                </div>
                <div>
                    <strong><img style="width: 100px;" src="/img/@Html.DisplayFor(model => model.Cart.Product.ImageURL)" /></strong>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Cart.Qty" class="control-label"></label>
                <input asp-for="Cart.Qty" class="form-control" />
                <span asp-validation-for="Cart.Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
